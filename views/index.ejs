	        <form action = "mongooses/<%= mongooses[x]._id %>/destroy" method="POST">
			<input type = "submit" value= "Delete" name = "btn">
			</form>
	       	</h4>
	        <hr>     
	    <% } %>

	</div>
	          
	<div>
		<form class="" action="/mongooses" method="POST"> 
		<p>Name : <input type = "text" value= "" name= "name"></p>
		<p>Age :<input type = "text" value= "" name= "age"></p>
		<input type = "submit" value= "Add a new mongoose" name = "btn">
		</form>
	</div>
</body>     
</html> 