<body> 
	<div>


		<h2>Here are all the mongooses:</h2>

		<h3><a href = "mongooses/new" >Add a new mongoose</a> <br></h3>
		
		<% for (var x in mongooses) { %>
	        <h4>Name: <%= mongooses[x].name %>  | age: <%= mongooses[x].age %> <br>
	        <a href = "mongooses/<%= mongooses[x]._id %>" >Show</a> <br>  
